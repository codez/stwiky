<%= div_for(note, :style => css_position(note)) do %>
    <div class="remove">
    	<%= link_to 'X', note_path(note), :remote => true, :method => :delete, :confirm => 'You sure?'%>
    </div>  

	<div class="text">
	<%= simple_format note.content %>
	</div>
	
	<div class="modified">
	<%= note.updated_at %>
	</div>		
	
	<%= update_page_tag do |page|
	    page.draggable dom_id(note), :scroll => 'window', :onEnd => js_update_pos(note)
	    page << "Event.observe('#{dom_id(note)}', 'dblclick', #{update_form_function(note)});"
	  end %>
<% end %>



