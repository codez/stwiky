<%= note_div(note) do %>
    <div class="remove">
    	<%= link_to 'X', note_path(note), :remote => true, :method => :delete, :confirm => 'You sure?'%>
    </div>  

	<div class="content">
	<%= simple_format note.content %>
	</div>
	
	<div class="modified">
	<%= note.updated_at %>
	</div>		
	
	<div id="resizer_<%= note.id %>">
	   R	
    </div>
	
	<%= update_page_tag do |page|
	    page.draggable dom_id(note), 
                       :scroll => 'window',
                       :onEnd => js_update_pos(note)

        page.draggable "resizer_#{note.id}", 
                       :scroll => 'window', 
                       :onDrag => js_resize_note(note),
                       :onEnd => js_update_pos(note)

        page << "Event.observe('#{dom_id(note)}', 'dblclick', function (event) { Event.stop(event); " + remote_function(:url => edit_note_path(note), :method => :get) + "; });" 
	  end %>
<% end %>



