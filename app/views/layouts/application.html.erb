<!DOCTYPE html>
<html>
<head>
  <title>Stwiki</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<% if @current_user %>
   <div id="userinfo">
   	    <b><%= @current_user.name %></b>
		&nbsp;
		<%= link_to 'Logout', login_path, :method => :delete, :confirm => 'You sure?' %>
   </div>
<% end %>

<%= yield %>

</body>
</html>
