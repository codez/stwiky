<% options = board.id == @board.id ? {:class => 'active'} : {} %>
<%= content_tag_for :li, board, options do %>
    <% if current_page? user_board_path(:boardname => board.shortname) %>
	   <%= board.name %>
	   <%= javascript_tag do %>                                  
            <%= js_dblclick_board(board) %>          
       <% end %>       
	<% else %>   
        <%= link_to board.name, 
                    user_board_path(:boardname => board.shortname) %>
	    <%= drop_receiving_element(dom_id(board), 
                                   :accept => 'note',
                                   :hoverclass => 'dropping',
                                   :onDrop => 'move_note') %>
    <% end %>								  
<% end %>